<div class="col-md-6 col-sm-6">
  <article class="entry">
    <h2><%= link_to article.title, article_path(article) %></h2>
    <section class="meta">
      <%= icon :calendar %> <%= l article.publication_date.to_date if article.publication_date %>
      <%= icon     :user %> <%= t :author %>
    </section>
    <section class="bthumb">
      <%= link_to article_path(article) do %>
        <%= image_tag article.photo.thumb('300x300#').url, class: 'img-responsive' if article.photo %>
      <% end %>
    </section>
    <p><%= article.description %></p>
  </article>
</div>